<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/word"
        style="@style/ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/extra_large"
        android:hint="input word"
        android:textAppearance="@style/TextPrimary.Normal.Standard"
        tools:text="" />

    <EditText
        android:id="@+id/transcription"
        style="@style/ListView"
        android:hint="input transcription"
        android:textAppearance="@style/TextPrimary.Normal.Standard" />

    <EditText
        android:id="@+id/translation"
        style="@style/ListView"
        android:hint="input translation"
        android:textAppearance="@style/TextPrimary.Normal.Standard" />

    <EditText
        android:id="@+id/example"
        style="@style/ListView"
        android:hint="input example"
        android:textAppearance="@style/TextPrimary.Normal.Standard" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/large"
        android:enabled="false"
        android:text="send" />

</LinearLayout>