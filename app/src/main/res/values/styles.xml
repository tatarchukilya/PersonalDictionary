<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/marginLarge</item>
        <item name="android:layout_marginEnd">@dimen/marginLarge</item>
        <item name="android:layout_marginTop">@dimen/marginStandard</item>
        <item name="android:layout_marginBottom">@dimen/marginStandard</item>
    </style>

    <style name="ListView.Divider">
        <item name="android:layout_height">@dimen/dividerHeight</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!--    TextPrimary    -->
    <style name="TextPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextPrimary.Normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextPrimary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPrimary.Normal.Large">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="TextPrimary.Bold.Large">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="TextPrimary.Normal.Standard">
        <item name="android:textSize">@dimen/textStandard</item>
    </style>

    <style name="TextPrimary.Bold.Standard">
        <item name="android:textSize">@dimen/textStandard</item>
    </style>

    <style name="TextPrimary.Normal.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="TextPrimary.Bold.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <!--    TextSecondary-->
    <style name="TextSecondary">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextSecondary.Normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextSecondary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSecondary.Normal.Large">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="TextSecondary.Bold.Large">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="TextSecondary.Normal.Standard">
        <item name="android:textSize">@dimen/textStandard</item>
    </style>

    <style name="TextSecondary.Bold.Standard">
        <item name="android:textSize">@dimen/textStandard</item>
    </style>

    <style name="TextSecondary.Normal.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="TextSecondary.Bold.Small">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

</resources>